package java_21_10_07;


import java.util.Scanner;

public class Ex06_forEx2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner scan = new Scanner(System.in);
		int num = 0, num1 = 0;
		System.out.println("시작값: " + num);
		num = scan.nextInt();
		System.out.println("끝값: " + num1);
		num1 = scan.nextInt();
		
		int num2 = 0;
		int i = 0;
		for( i=num; i<=num1; i++) {
			num2 += i;
			System.out.println(i);
			if(i < num2) {
				System.out.println("+");
			}else {
				System.out.println("=");
			}
		}

	}

}
